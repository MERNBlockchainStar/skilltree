{
  "compilerOptions": {
    "alwaysStrict": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "production",
    "removeComments": true,
    "skipLibCheck": true,
    "target": "es6"
  },
  "include": [
    "source/**/*"
  ],
  "exclude": [
    "tests/source/**/*",
    "tsx/**/*",
    "node_modules/**/*"
  ]
}