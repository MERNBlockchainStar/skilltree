{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [ "dom", "es7" ],
        "locale": "en-US",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "outDir": "public",
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es5",
        "types": [ "reflect-metadata" ],
        "strictPropertyInitialization": false,
        "jsx": "react"
    },
    "include": [
        "private/**/*"
    ],
    "exclude": [
        "node_modules",
        "private/webpack/*",
        "public"
    ]
} 
