{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "declarationDir": "types",
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "tests/compiled",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6"
  },
  "include": [
    "tests/source/**/*"
  ],
  "exclude": [
    "source/**/*",
    "tsx/**/*",
    "node_modules/**/*"
  ]
}